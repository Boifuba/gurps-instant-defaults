<div class="skill-chooser">
  <div class="search-section">
    <input type="text" id="skill-filter" class="search-input" placeholder="Filter skills..." autocomplete="off"/>
    <div class="skill-count"><span id="skill-count">{{skills.length}}</span> skills found</div>
  </div>
  <div class="display-toggle-section">
    <button id="toggle-name" class="toggle-btn active" type="button">Show Name</button>
    <button id="toggle-otf" class="toggle-btn" type="button">Show OTF</button>
  </div>
  <div id="skills-result" class="skills-list"></div>

</div>